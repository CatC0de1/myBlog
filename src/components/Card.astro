---
import { Image } from 'astro:assets';

const { post } = Astro.props;
---

<div class="card">
  <div class="thumbnail">
    <Image inferSize src={post.data.image} class="card-img-top" alt={post.data.title} />
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <a href={`blog/${post.slug}`}>{post.data.title}</a>
    </h5>
  </div>
  <div class="card-footer">
    <div class="meta">
      <p>{post.data.author}</p>
      <span> &bull; </span>
      <time datetime={post.data.publishedAt}>
        {post.data.publishedAt}
      </time>
    </div>
    
  </div>
  <!-- <small>Published on {post.data.date.toLocaleDateString()}</small> -->

</div>

<style>
  .thumbnail {
    /* width: 100%; */
    height: 200px;
    background-color: #eee;
    border-radius: 0.5rem;
    /* overflow: hidden; */
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .meta {
    display: flex;
    font-size: small;
    /* justify-content: space-between; */
    /* align-items: center; */
  }

  .meta p {
    margin: 0;
    margin-right: 0.5rem;
  }

  .meta time {
    /* color: #666; */
    margin-left: 0.5rem;
  }
</style>